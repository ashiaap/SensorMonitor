<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.example.sensormonitor.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SENSOR MONITOR"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sensor_prox"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/bg"
            android:padding="18dp"
            android:text="Hello World!"
            android:textAlignment="center"
            android:textColor="#0061ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sensor_acc"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/bg"
            android:padding="18dp"
            android:text="Hello World!"
            android:textAlignment="center"
            android:textColor="#0061ff"
            app:layout_constraintStart_toEndOf="@+id/sensor_prox"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sensor_temp"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/bg"
            android:padding="18dp"
            android:text="Hello World!"
            android:textAlignment="center"
            android:textColor="#0061ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sensor_prox" />

        <TextView
            android:id="@+id/sensor_hum"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/bg"
            android:padding="18dp"
            android:text="Hello World!"
            android:textAlignment="center"
            android:textColor="#0061ff"
            app:layout_constraintStart_toEndOf="@+id/sensor_temp"
            app:layout_constraintTop_toBottomOf="@+id/sensor_acc" />


        <TextView
            android:id="@+id/sensor_light"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/bg"
            android:padding="18dp"
            android:text="Light"
            android:textAlignment="center"
            android:textColor="#0061ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sensor_temp" />

        <TextView
            android:id="@+id/sensor_press"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/bg"
            android:padding="18dp"
            android:text="Hello World!"
            android:textAlignment="center"
            android:textColor="#0061ff"
            app:layout_constraintStart_toEndOf="@+id/sensor_light"
            app:layout_constraintTop_toBottomOf="@+id/sensor_hum" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>


</android.support.constraint.ConstraintLayout>